public class DBConnector {
	Connection con;
	DBDef dbDef;
	
	
	public DBConnector(){
		dbDef = new DBDef();
		connectToDB();
		updateDBVersion();
//		int id = insertNewSpiel("nadu", "Rocket", 3);
